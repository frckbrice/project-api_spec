{
  "name": "@cocoaflow/api-specification",
  "version": "1.0.0",
  "description": "Comprehensive OpenAPI 3.1.0 specification for CocoaFlow - Cocoa Industry Management Platform",
  "keywords": [
    "openapi",
    "api",
    "specification",
    "cocoa",
    "agriculture",
    "farm-management",
    "certification",
    "rainforest-alliance"
  ],
  "license": "Apache-2.0",
  "author": {
    "name": "avom brice",
    "email": "bricefrkc@gmail.com",
    "url": "https://maebrieporfolio.vercel.app/"
  },
  "main": "swt_api_spec/cocoaflow-api.yaml",
  "repository": {
    "type": "git",
    "url": "git@github.com:frckbrice/project-api_spec.git",
    "directory": "project-api_spec"
  },
  "bugs": {
    "url": "https://github.com/frckbrice/project-api_spec/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "preview": "redocly preview-docs ./swt_api_spec/cocoaflow-api.yaml",
    "build": "redocly build-docs ./swt_api_spec/cocoaflow-api.yaml -o ./public/index.html",
    "bundle": "redocly bundle ./swt_api_spec/cocoaflow-api.yaml -o ./dist/cocoaflow-api.yaml",
    "bundle-deref": "redocly bundle ./swt_api_spec/cocoaflow-api.yaml -o ./dist/cocoaflow-api-deref.yaml -d true",
    "lint": "redocly lint ./swt_api_spec/cocoaflow-api.yaml",
    "lint:fix": "redocly lint ./swt_api_spec/cocoaflow-api.yaml",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml}\"",
    "validate": "redocly lint ./swt_api_spec/cocoaflow-api.yaml",
    "test": "npm run lint && npm run validate && npm run format:check",
    "docs:serve": "redocly preview-docs ./swt_api_spec/cocoaflow-api.yaml --port 8080",
    "docs:build": "redocly build-docs ./swt_api_spec/cocoaflow-api.yaml -o ./public/index.html",
    "generate:client": "openapi-generator-cli generate -i ./dist/cocoaflow-api.yaml -g typescript-axios -o ./generated/typescript",
    "generate:postman": "openapi-generator-cli generate -i ./dist/cocoaflow-api.yaml -g postman -o ./generated/postman",
    "clean": "rm -rf ./dist ./generated ./docs",
    "version": "npm run bundle && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@redocly/cli": "^1.0.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "files": [
    "swt_api_spec/",
    "dist/",
    "docs/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
